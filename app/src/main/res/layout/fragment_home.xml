<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFA"
    android:orientation="horizontal">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/feild1chart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:background="#F0096E06"
        android:elevation="20dp"
        app:layout_constraintBottom_toTopOf="@id/feild2chart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/feild2chart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="26dp"
        android:background="#F0096E06"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/feild1chart"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/refreshBtn"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_corners"
        android:text="Refresh Data"
        android:textColor="#FFC400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feild2chart" />


</androidx.constraintlayout.widget.ConstraintLayout>